<snippet>
  <content><![CDATA[
// Generates line-height values in both pixels and rems.
@mixin line-height(${1:}height-value: 12) {
    line-height: ${1:}height-value * 1px; //fallback for old browsers
    line-height: (1 / (${1:}base-font-size / (${1:}base-font-size * 0 + 1)) * ${1:}height-value * 1rem);
}

.foo {
  @include line-height(16);
}
]]></content>
  <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
  <tabTrigger>andy-line-height-px</tabTrigger>
  <description>line-height px/rem</description>
  <!-- Optional: Set a scope to limit where the snippet will trigger -->
  <scope>source.scss</scope>
</snippet>
