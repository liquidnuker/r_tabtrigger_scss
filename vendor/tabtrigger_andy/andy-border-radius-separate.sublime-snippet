<snippet>
  <content><![CDATA[
// Mixin helper to output vendor-prefixed CSS
// @author HugoGiraudel
// @param {String} ${1:}property - Unprefixed CSS property
// @param {*} ${1:}value - Raw CSS value
// @param {List} ${1:}prefixes [()] - List of prefixes to output
@mixin prefix(${1:}property, ${1:}value, ${1:}prefixes: ()) {
  @each ${1:}prefix in ${1:}prefixes {
    -#{${1:}prefix}-#{${1:}property}: ${1:}value;
  }

  #{${1:}property}: ${1:}value;
}

// Separated border-radius helpers
// Usage
//   .foo {
//     @include border-radius-separate(1px, 2px, 3px, 4px);
//   }
@mixin border-radius-separate(${1:}top-left-radius, ${1:}top-right-radius, ${1:}bottom-right-radius, ${1:}bottom-left-radius) {
    @include prefix(border-top-left-radius, ${1:}top-left-radius, 'webkit' 'moz');
    @include prefix(border-top-right-radius, ${1:}top-right-radius, 'webkit' 'moz');
    @include prefix(border-bottom-right-radius, ${1:}bottom-right-radius, 'webkit' 'moz');
    @include prefix(border-bottom-left-radius, ${1:}bottom-left-radius, 'webkit' 'moz');
}

.foo {
  @include border-radius-separate(1px, 2px, 3px, 4px);
}
]]></content>
  <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
  <tabTrigger>andy-border-radius-separate</tabTrigger>
  <description>border-radius helper</description>
  <!-- Optional: Set a scope to limit where the snippet will trigger -->
  <scope>source.scss</scope>
</snippet>
