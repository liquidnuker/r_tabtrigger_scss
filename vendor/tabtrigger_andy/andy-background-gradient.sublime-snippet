<snippet>
  <content><![CDATA[
// Background gradient helper
// Usage
//   .foo {
//     @include background-gradient(red, black, 'vertical');
//   }
@mixin background-gradient(${1:}start-color, ${1:}end-color, ${1:}orientation) {
    background: ${1:}start-color;

    @if ${1:}orientation == 'vertical' {
      background: -webkit-linear-gradient(top, ${1:}start-color, ${1:}end-color);
      background: linear-gradient(to bottom, ${1:}start-color, ${1:}end-color);
    } @else if ${1:}orientation == 'horizontal' {
      background: -webkit-linear-gradient(left, ${1:}start-color, ${1:}end-color);
      background: linear-gradient(to right, ${1:}start-color, ${1:}end-color);
    } @else {
      background: -webkit-radial-gradient(center, ellipse cover, ${1:}start-color, ${1:}end-color);
      background: radial-gradient(ellipse at center, ${1:}start-color, ${1:}end-color);
    }
}

.foo {
 @include background-gradient(red, black, 'vertical');
}
]]></content>
  <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
  <tabTrigger>andy-background-gradient</tabTrigger>
  <!-- Optional: Set a scope to limit where the snippet will trigger -->
  <description>background gradient helper</description>
  <scope>source.scss</scope>
</snippet>


