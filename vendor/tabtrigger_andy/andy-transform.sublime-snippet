<snippet>
  <content><![CDATA[
// Automatically prefix any transform
// @param {String} $transformation - The transform to apply
// @example scss - Usage
//   .foo {
//     @include transform(translateX(10px));
//   }
@mixin transform($transformation){
  @include prefix(transform, $transformation, 'webkit' 'ms');
}

@include transform(translateX(10px));
]]></content>
  <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
  <tabTrigger>andy-transform</tabTrigger>
  <description>autoprefix any transform</description>
  <!-- Optional: Set a scope to limit where the snippet will trigger -->
  <scope>source.scss</scope>
</snippet>
