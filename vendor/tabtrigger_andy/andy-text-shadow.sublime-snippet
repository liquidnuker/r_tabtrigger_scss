<snippet>
  <content><![CDATA[
// Embossing text shadow
// @param {Float} ${1:}value - Opacity value
// @example scss - Usage
//   .foo {
//     @include text-shadow(0.5);
//   }
@mixin text-shadow(${1:}value) {
    text-shadow: rgba(255, 255, 255, ${1:}value) 0 1px 0;
}

.foo {
  @include text-shadow(0.5);
}
]]></content>
  <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
  <tabTrigger>andy-text-shadow</tabTrigger>
  <!-- Optional: Set a scope to limit where the snippet will trigger -->
  <scope>source.scss</scope>
</snippet>
